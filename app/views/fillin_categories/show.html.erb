<p id="notice"><%= notice %></p>

<h1 class="text-info">
  <strong>Name:</strong>
  <%= @fillin_category.name %>
</h1>

<%= link_to 'Edit', edit_category_path(@fillin_category) %> |
<%= link_to 'All Fill-in Categories', fillin_categories_path %>


<%= render "fillin_cards/fillable_card_help"%>

<table class="table">
  <thead>
    <h2 class="text-info text-center">Cards <%= link_to "+ Add Card to Category", new_fillin_card_path(fillin_domain_id: @fillin_category.fillin_domain, fillin_category_id: @fillin_category), class: "btn btn-success", autofocus: true %></h2>
    <tr>
      <th>Question</th>
      <th>Additional Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fillin_category.fillin_cards.each do |card| %>
      <tr>
        <td><%= card.question %></td>
        <td><%= card.additional_info %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_fillin_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
